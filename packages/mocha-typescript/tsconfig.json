{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "outDir": "dist",
        "listFiles": false,
        "lib": [
          "es5", "es6"
        ]
    },
    "compileOnSave": false,
    "include": [
      "src/**/*.ts",
      "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
